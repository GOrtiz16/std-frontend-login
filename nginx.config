server {
    listen       8080;
    server_name  localhost;

    # Redirige /login a /
    location = /login {
        return 301 /;
    }

    # Manejo de la raíz y otros archivos
    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    # Manejo de errores
    error_page  400 401 403 404  /40x.html;
    location = /40x.html {
        root   /usr/share/nginx/html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    # Configuración adicional para PHP o .htaccess
    # Estas líneas están comentadas ya que no son necesarias para tu configuración actual
